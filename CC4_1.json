{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/AntoniaDahuabe/AntoniaDahuabe.github.io/refs/heads/main/long_format_data_Figure_4__Daily_time_use.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {"field": "Unnamed: 0", "type": "nominal", "axis": {"labelAngle": 0}},
    "y": {"field": "Value", "type": "quantitative"},
    "color": {
      "field": "Unnamed: 0",
      "type": "nominal",
      "scale": {"scheme": "purplegreen", "reverse": true},
      "legend": {
        "title": "Group (Gender x Employment status)",
        "orient": "top",
        "direction": "vertical",
        "columns": 1
      }
    },
    "facet": {"field": "Category", "type": "nominal", "columns": 2}
  },
  "config": {}
}