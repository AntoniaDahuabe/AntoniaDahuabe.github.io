          "scale": {"domain": [10, 46]},
          "type": "quantitative"
        },
        "y": {
          "axis": {
            "gridOpacity": 0.2,
            "ticks": true,
            "title": "Gross disposable income per head (£), source: ONS",
            "labelExpr": "'£' + format(datum.value, ',')"
          },
          "field": "Gross disposable household income per head",
          "scale": {"domain": [13000, 45000], "clamp": true, "nice": false},
          "type": "quantitative"
        }
      },
      "title": {"text": "Income and Childcare Accessibility in England"},
      "transform": [{"filter": "(datum.LAD23NM !== 'City of London')"}]
    },
    {
      "mark": {
        "type": "text",
        "align": {
          "expr": "datum.LAD23NM == 'Torridge' ? 'center' : datum.LAD23NM == 'Walsall' ? 'center' : 'left'"
        },
        "dx": {
          "expr": "datum.LAD23NM == 'Torridge' ? 0 : datum.LAD23NM == 'Walsall' ? 0 : 7"
        },
        "dy": {
          "expr": "datum.LAD23NM == 'Torridge' ? -10 : datum.LAD23NM == 'Walsall' ? 10 : 0"
        }
      },
      "encoding": {
        "detail": {"field": "LAD23NM", "type": "nominal"},
        "text": {"field": "LAD23NM", "type": "nominal"},
        "tooltip": [
          {"field": "LAD23NM", "title": "Local Authority"},
          {
            "field": "Childcare accessibility",
            "format": ".2",
            "title": "Places per 100 children"
          },
          {
            "field": "Gross disposable household income per head",
            "format": ",.0f",
            "title": "Income per head (£)"
          }
        ],
        "x": {"field": "Childcare accessibility", "type": "quantitative"},
        "y": {
          "field": "Gross disposable household income per head",
          "type": "quantitative"
        }
      },
      "transform": [
        {
          "filter": {
            "field": "LAD23NM",
            "oneOf": [
              "Torridge",
              "Walsall",
              "Cambridge",
              "St Albans",
              "Richmond upon Thames"
            ]
          }
        }
      ]
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/Chart%20Packs/Childcare/data/C5_income_childcare_accessibility.csv"
  },
  "height": 350,
  "width": 350,
  "$schema": "https://vega.github.io/schema/vega-lite/v5.17.0.json",
